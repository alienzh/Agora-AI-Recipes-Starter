<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp"
    tools:context=".ui.AgentChatActivity">

    <!-- Log Section -->
    <FrameLayout
        android:id="@+id/cardLog"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginBottom="12dp"
        android:background="#F2F2F2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:scrollbars="vertical">

            <TextView
                android:id="@+id/tvLog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:textColor="#666666"
                android:textSize="12sp" />
        </ScrollView>
    </FrameLayout>

    <!-- Main Content Container -->
    <LinearLayout
        android:id="@+id/llMainContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardLog">

        <!-- Visual Container (transcript + local video) -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#F2F2F2">

            <!-- Transcript List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvTranscript"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingVertical="12dp"
                android:scrollbars="vertical" />

            <!-- Local Video Container (small window at top-right) -->
            <FrameLayout
                android:id="@+id/localVideoContainer"
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                android:layout_gravity="top|end"
                android:background="@drawable/bg_rounded_black"
                android:elevation="8dp"
                android:clickable="true"
                android:focusable="true">

                <SurfaceView
                    android:id="@+id/localVideoView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </FrameLayout>
        </FrameLayout>

        <!-- Agent Status Section -->
        <LinearLayout
            android:id="@+id/llAgentStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agent Status:"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvAgentStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Unknown"
                android:textColor="#666666"
                android:textSize="14sp"
                tools:text="Speaking" />
        </LinearLayout>

        <!-- Control Buttons -->
        <LinearLayout
            android:id="@+id/llControls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            tools:visibility="visible">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnMute"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/bg_button_mute_selector"
                android:contentDescription="Mute/Unmute"
                android:padding="12dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ic_mic"
                app:tint="@android:color/white" />

            <View
                android:id="@+id/spacer1"
                android:layout_width="16dp"
                android:layout_height="match_parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStop"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="2"
                android:background="@drawable/selector_button_hangup"
                android:letterSpacing="0.02"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:text="退出频道"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:backgroundTint="@null"
                app:cornerRadius="16dp"
                app:elevation="8dp"
                app:rippleColor="#33FFFFFF" />

            <View
                android:id="@+id/spacer2"
                android:layout_width="16dp"
                android:layout_height="match_parent" />

            <!-- Video Toggle Button for Vision Feature -->
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnVideo"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/bg_button_mute_selector"
                android:contentDescription="Video On/Off"
                android:padding="12dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ic_video_on"
                app:tint="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

    <!-- Start Section (shown when not connected) -->
    <io.agora.convoai.example.startup.ui.ChannelInputView
        android:id="@+id/channelInputView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardLog" />

</androidx.constraintlayout.widget.ConstraintLayout>
