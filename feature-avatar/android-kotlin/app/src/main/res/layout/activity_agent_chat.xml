<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="16dp"
    tools:context=".ui.AgentChatActivity">

    <!-- Log Section -->
    <FrameLayout
        android:id="@+id/cardLog"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_rounded_white"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:scrollbars="vertical">

            <TextView
                android:id="@+id/tvLog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:textColor="#666666"
                android:textSize="12sp" />
        </ScrollView>
    </FrameLayout>

    <!-- Transcript List and Agent Status  -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardTranscript"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="96dp"
        android:background="@drawable/bg_rounded_white"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardLog">

        <!-- Transcript List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTranscript"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:paddingVertical="12dp"
            android:scrollbars="vertical"
            app:layout_constraintBottom_toTopOf="@id/llAgentStatus"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Agent Status Section -->
        <LinearLayout
            android:id="@+id/llAgentStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agent Status:"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvAgentStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Unknown"
                android:textColor="#666666"
                android:textSize="14sp"
                tools:text="Speaking" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Start Section (shown when not connected) -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardLog">

        <io.agora.convoai.example.startup.ui.ChannelInputView
            android:id="@+id/channelInputView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

    <!-- Control Buttons (shown when connected) -->
    <LinearLayout
        android:id="@+id/llControls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnMute"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/bg_button_mute_selector"
            android:contentDescription="Mute/Unmute"
            android:padding="12dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_mic"
            app:tint="@android:color/white" />

        <View
            android:id="@+id/spacer1"
            android:layout_width="24dp"
            android:layout_height="match_parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStop"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="2"
            android:background="@drawable/selector_button_hangup"
            android:letterSpacing="0.02"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:text="退出频道"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="@null"
            app:cornerRadius="16dp"
            app:elevation="8dp"
            app:rippleColor="#33FFFFFF" />
    </LinearLayout>

    <!-- Avatar Video Container (positioned over transcript area, clickable to expand) -->
    <!-- Placed at end of layout to ensure it's on top (higher z-order) -->
    <FrameLayout
        android:id="@+id/avatarVideoContainer"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_margin="8dp"
        android:visibility="gone"
        android:background="@drawable/bg_rounded_black"
        android:elevation="8dp"
        app:layout_constraintEnd_toEndOf="@id/cardTranscript"
        app:layout_constraintTop_toTopOf="@id/cardTranscript"
        tools:visibility="visible">

        <SurfaceView
            android:id="@+id/avatarVideoView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
