<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="16dp"
    tools:context=".ui.AgentChatActivity">

    <!-- Log Section -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardLog"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginBottom="12dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:scrollbars="vertical">

            <TextView
                android:id="@+id/tvLog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:textColor="#666666"
                android:textSize="12sp" />
        </ScrollView>
    </com.google.android.material.card.MaterialCardView>

    <!-- Transcript List and Agent Status  -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardTranscript"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="96dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardLog">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Transcript List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvTranscript"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:clipToPadding="false"
                android:paddingVertical="12dp"
                android:scrollbars="vertical"
                app:layout_constraintBottom_toTopOf="@id/llAgentStatus"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Agent Status Section -->
            <LinearLayout
                android:id="@+id/llAgentStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agent Status:"
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvAgentStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Unknown"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    tools:text="Speaking" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Start Button (shown when not connected) -->
    <LinearLayout
        android:id="@+id/llStart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStart"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:background="@drawable/selector_gradient_button"
            android:letterSpacing="0.02"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:text="Start"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="@null"
            app:cornerRadius="16dp"
            app:elevation="8dp"
            app:rippleColor="#33FFFFFF" />
    </LinearLayout>

    <!-- Control Buttons (shown when connected) -->
    <LinearLayout
        android:id="@+id/llControls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnMute"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/bg_button_mute_selector"
            android:contentDescription="Mute/Unmute"
            android:padding="12dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_mic"
            app:tint="@android:color/white" />

        <View
            android:id="@+id/spacer1"
            android:layout_width="24dp"
            android:layout_height="match_parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStop"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="2"
            android:background="@drawable/selector_button_hangup"
            android:letterSpacing="0.02"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:text="Stop Agent"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="@null"
            app:cornerRadius="16dp"
            app:elevation="8dp"
            app:rippleColor="#33FFFFFF" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
